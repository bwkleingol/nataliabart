                <img src="/images/natbart9.avif" alt="Engagement photo" loading="lazy" />
                <div class="caption">Engagement Day, Bali, 2023</div>
            </div>
            <div class="gallery-item">
                <img src="/images/natbart10.avif" alt="Engagement ring" loading="lazy" />
                <div class="caption">The Proposal</div>
            </div>
            <div class="gallery-item">
                <img src="/images/natbart11.avif" alt="Family gathering" loading="lazy" />
                <div class="caption">Family Gathering, 2023</div>
            </div>
