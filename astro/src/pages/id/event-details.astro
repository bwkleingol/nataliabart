---
import Layout from '../../layouts/Layout.astro';
import { t, setCurrentLocale } from '../../i18n/utils';

// Set the current locale
const currentLocale = Astro.currentLocale || 'id';
setCurrentLocale(currentLocale);
---

<Layout title={`${t('nav.eventDetails')} - ${t('site.title')}`}>
    <section class="page-header">
        <h1>{t('nav.eventDetails')}</h1>
        <div class="divider"></div>
    </section>

    <div class="content-container">
        <section class="ceremony-section">
            <div class="section-header">
                <h2>Ceremony</h2>
                <div class="divider"></div>
            </div>

            <div class="event-details">
                <div class="event-info">
                    <div class="info-item">
                        <div class="icon">üìÖ</div>
                        <div class="detail">
                            <h3>Date</h3>
                            <p>Saturday, June 14, 2025</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="icon">‚è∞</div>
                        <div class="detail">
                            <h3>Time</h3>
                            <p>10:00 AM - 11:30 AM</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="icon">üìç</div>
                        <div class="detail">
                            <h3>Location</h3>
                            <p>St. Theresa Cathedral</p>
                            <p>Jl. Pandanaran No.9, Semarang</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="icon">üëó</div>
                        <div class="detail">
                            <h3>Dress Code</h3>
                            <p>Formal / Traditional Attire</p>
                        </div>
                    </div>
                </div>
                <div class="event-image ceremony"></div>
            </div>
        </section>

        <section class="reception-section">
            <div class="section-header">
                <h2>Reception</h2>
                <div class="divider"></div>
            </div>

            <div class="event-details reverse">
                <div class="event-image reception"></div>
                <div class="event-info">
                    <div class="info-item">
                        <div class="icon">üìÖ</div>
                        <div class="detail">
                            <h3>Date</h3>
                            <p>Saturday, June 14, 2025</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="icon">‚è∞</div>
                        <div class="detail">
                            <h3>Time</h3>
                            <p>6:00 PM - 11:00 PM</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="icon">üìç</div>
                        <div class="detail">
                            <h3>Location</h3>
                            <p>Grand Ballroom, Gumaya Tower Hotel</p>
                            <p>Jl. Gajahmada No.59-61, Semarang</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="icon">üëî</div>
                        <div class="detail">
                            <h3>Dress Code</h3>
                            <p>Formal Evening Attire</p>
                            <p>Colors: Gold, Champagne, or Neutral Tones</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="schedule-section">
            <div class="section-header">
                <h2>Schedule of Events</h2>
                <div class="divider"></div>
            </div>

            <div class="schedule">
                <div class="schedule-item">
                    <div class="time">10:00 AM</div>
                    <div class="event">
                        <h3>Ceremony Begins</h3>
                        <p>St. Theresa Cathedral</p>
                    </div>
                </div>
                <div class="schedule-item">
                    <div class="time">11:30 AM</div>
                    <div class="event">
                        <h3>Lunch Reception</h3>
                        <p>Cathedral Hall</p>
                    </div>
                </div>
                <div class="schedule-item">
                    <div class="time">1:00 PM - 5:00 PM</div>
                    <div class="event">
                        <h3>Break</h3>
                        <p>Free time to rest or explore Semarang</p>
                    </div>
                </div>
                <div class="schedule-item">
                    <div class="time">6:00 PM</div>
                    <div class="event">
                        <h3>Evening Reception Begins</h3>
                        <p>Cocktail hour and guest arrival</p>
                    </div>
                </div>
                <div class="schedule-item">
                    <div class="time">7:00 PM</div>
                    <div class="event">
                        <h3>Dinner Service</h3>
                        <p>Indonesian and Dutch fusion cuisine</p>
                    </div>
                </div>
                <div class="schedule-item">
                    <div class="time">8:30 PM</div>
                    <div class="event">
                        <h3>First Dance & Celebrations</h3>
                        <p>Dancing and entertainment</p>
                    </div>
                </div>
                <div class="schedule-item">
                    <div class="time">11:00 PM</div>
                    <div class="event">
