            </div>

            <div class="maps">
                <div class="map-container">
                    <h3>Ceremony: St. Theresa Cathedral</h3>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3960.2382686811813!2d110.40852931477322!3d-6.9839809949643!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e708b4ec52bfe7f%3A0xb14ab4d164e6969!2sCathedral%20Church%20of%20St.%20Theresa%20Semarang!5e0!3m2!1sen!2sid!4v1625123456789!5m2!1sen!2sid" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
                <div class="map-container">
                    <h3>Reception: Gumaya Tower Hotel</h3>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3960.2284686811813!2d110.41852931477322!3d-6.9839809949643!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e708b4d7b5da561%3A0x8c1576f58d4a373f!2sGumaya%20Tower%20Hotel!5e0!3m2!1sen!2sid!4v1625123456789!5m2!1sen!2sid" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </section>
    </div>
</Layout>

<style>
    .content-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .ceremony-section, .reception-section, .schedule-section, .map-section {
        margin: 4rem 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-header h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .section-header .divider {
        width: 100px;
        height: 2px;
        background-color: var(--secondary-color);
        margin: 0 auto;
    }

    .event-details {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .event-details.reverse {
        flex-direction: row-reverse;
    }

    .event-info {
        flex: 1;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1rem;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .info-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .icon {
        font-size: 2rem;
        color: var(--primary-color);
    }

    .detail h3 {
        margin: 0 0 0.5rem 0;
        color: var(--primary-color);
        font-size: 1.2rem;
    }

    .detail p {
        margin: 0;
        color: var(--text-color);
        line-height: 1.5;
    }

    .event-image {
        flex: 1;
        height: 400px;
        border-radius: 10px;
        background-size: cover;
        background-position: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .event-image.ceremony {
        background-image: url('/images/ceremony.jpg');
    }

    .event-image.reception {
        background-image: url('/images/reception.jpg');
    }

    .schedule {
        max-width: 800px;
        margin: 0 auto;
        border-left: 2px solid var(--primary-color);
        padding-left: 2rem;
    }

    .schedule-item {
        position: relative;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
    }

    .schedule-item::before {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        background-color: white;
        border: 4px solid var(--primary-color);
        border-radius: 50%;
        left: -2.9rem;
        top: 0;
    }

    .time {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: var(--primary-color);
        color: white;
        border-radius: 4px;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .event h3 {
        margin: 0 0 0.5rem 0;
        color: var(--primary-color);
    }

    .event p {
        margin: 0;
        color: var(--text-color);
    }

    .maps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .map-container {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .map-container h3 {
        padding: 1rem;
        margin: 0;
        background-color: var(--primary-color);
        color: white;
        font-size: 1.2rem;
    }

    @media (max-width: 768px) {
        .event-details {
            flex-direction: column;
        }

        .event-details.reverse {
            flex-direction: column;
        }

        .event-image {
            width: 100%;
            height: 300px;
            order: -1;
        }

        .info-item {
            padding: 0.8rem;
        }

        .icon {
            font-size: 1.5rem;
        }

        .detail h3 {
            font-size: 1rem;
        }

        .schedule {
            padding-left: 1.5rem;
        }

        .schedule-item::before {
            width: 16px;
            height: 16px;
            left: -2.4rem;
        }
    }
</style>
