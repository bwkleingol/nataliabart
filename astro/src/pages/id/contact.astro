---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';
import { t, setCurrentLocale } from '../../i18n/utils';

// Set the current locale
const currentLocale = Astro.currentLocale || 'en';
setCurrentLocale(currentLocale);
---

<Layout>
    <section class="page-header">
        <h1>{t('contact.title')}</h1>
        <div class="divider"></div>
    </section>

    <section class="contact-content">

        <ContactForm />

    </section>
</Layout>

<style>
    .page-header {
        background-color: var(--primary-color);
        color: white;
        padding: 5rem 1rem;
        text-align: center;
        margin-bottom: 3rem;
    }

    .page-header h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .divider {
        width: 100px;
        height: 2px;
        background-color: var(--secondary-color);
        margin: 0 auto;
    }

    .contact-content {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1rem 5rem;
    }

    .contact-intro {
        text-align: center;
        margin-bottom: 3rem;
    }

    .contact-intro p {
        font-size: 1.2rem;
        line-height: 1.6;
        max-width: 800px;
        margin: 0 auto;
    }

    .contact-info {
        display: flex;
        gap: 2rem;
        margin-top: 4rem;
    }

    .info-card {
        flex: 1;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
    }

    .info-card h3 {
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
    }

    .info-card ul {
        list-style-type: none;
        padding: 0;
    }

    .info-card li {
        margin-bottom: 1rem;
        position: relative;
        padding-left: 1.5rem;
        line-height: 1.5;
    }

    .info-card li:before {
        content: "â€¢";
        color: var(--primary-color);
        font-size: 1.5rem;
        position: absolute;
        left: 0;
        top: -0.2rem;
    }

    .info-card p {
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        .contact-info {
            flex-direction: column;
        }
    }
</style>
