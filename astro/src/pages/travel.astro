<script>
    document.addEventListener('DOMContentLoaded', () => {
        const tabButtons = document.querySelectorAll('.location-tabs .tab-button');
        const allContent = document.getElementById('all-content');
        const semarangContent = document.getElementById('semarang-content');
        const baliContent = document.getElementById('bali-content');
        const tipsContent = document.querySelector('.travel-tips');
        const contactInfo = document.querySelector('.contact-info');
        const allLocationContent = [allContent, semarangContent, baliContent, tipsContent];

        const hideAllLocationContent = () => {
            allLocationContent.forEach(content => {
                if (content) {
                    content.style.display = 'none';
                }
            });
            if (contactInfo) contactInfo.style.display = 'none';
        };

        // Initially show all relevant content and activate 'All Info'
        hideAllLocationContent();
        if (allContent) allContent.style.display = 'block';
        if (semarangContent) semarangContent.style.display = 'block';
        if (baliContent) baliContent.style.display = 'block';
        if (tipsContent) tipsContent.style.display = 'block';

        tabButtons.forEach(button => {
            if (button.dataset.location === 'all') {
                button.classList.add('active');
            }

            button.addEventListener('click', function() {
                const location = this.dataset.location;

                tabButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');

                hideAllLocationContent();

                if (location === 'all') {
                    if (allContent) allContent.style.display = 'block';
                    if (semarangContent) semarangContent.style.display = 'block';
                    if (baliContent) baliContent.style.display = 'block';
                    if (tipsContent) tipsContent.style.display = 'block';
                } else if (location === 'semarang') {
                    if (semarangContent) semarangContent.style.display = 'block';
                } else if (location === 'bali') {
                    if (baliContent) baliContent.style.display = 'block';
                } else if (location === 'tips') {
                    if (tipsContent) tipsContent.style.display = 'block';
                }

                if (contactInfo) contactInfo.style.display = 'block';
            });
        });
    });
</script>