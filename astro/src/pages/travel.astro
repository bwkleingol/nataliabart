        const allLocationContent = [allContent, semarangContent, baliContent, tipsContent];

        const hideAllLocationContent = () => {
            allLocationContent.forEach(content => {
                if (content) {
                    content.style.display = 'none';
                }
            });
            if (contactInfo) contactInfo.style.display = 'none';
