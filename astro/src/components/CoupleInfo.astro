---
import { t, setCurrentLocale } from '../i18n/utils';

// Set the current locale
const currentLocale = Astro.currentLocale || 'en';
setCurrentLocale(currentLocale);
---

<section class="couple-info">
    <div class="section-header">
        <h2>{t('couple.title')}</h2>
        <div class="divider"></div>
    </div>

    <div class="couple-container">
        <div class="person">
            <div class="person-image natalia"></div>
            <h3>Natalia</h3>
            <p class="origin">{t('couple.natalia.origin')}</p>
            <p class="description">{t('couple.natalia.description')}</p>
        </div>

        <div class="heart-divider">‚ù§</div>

        <div class="person">
            <div class="person-image bart"></div>
            <h3>Bart</h3>
            <p class="origin">{t('couple.bart.origin')}</p>
            <p class="description">{t('couple.bart.description')}</p>
        </div>
    </div>
</section>

<style>
    .couple-info {
        padding: 5rem 1rem; 
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }

    .section-header {
        margin-bottom: 3rem;
    }

    .section-header h2 {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .divider {
        width: 100px;
        height: 2px;
        background-color: var(--secondary-color);
        margin: 0 auto;
    }

    .couple-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 2rem;
    }

    .person {
        flex: 1;
        max-width: 400px;
    }

    .person-image {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        margin: 0 auto 1.5rem;
        background-size: cover;
        background-position: center;
        border: 5px solid var(--primary-color);
    }

    .bart {
        background-image: url('/images/bart_denpasar.avif');
    }

    .natalia {
        background-image: url('/images/natalia_ubud.avif');
    }

    .person h3 {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
        color: var(--text-color);
    }

    .origin {
        font-style: italic;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .description {
        line-height: 1.6;
    }

    .heart-divider {
        display: flex;
        align-items: center;
        font-size: 2.5rem;
        color: var(--primary-color);
    }

    @media (max-width: 768px) {
        .couple-container {
            flex-direction: column;
            align-items: center;
        }

        .heart-divider {
            margin: 1rem 0;
        }
    }
</style>
