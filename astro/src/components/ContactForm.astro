<style>
    .contact-section {
        padding: 5rem 1rem;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .section-header {
        margin-bottom: 3rem;
    }

    .section-header h2 {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .divider {
        width: 100px;
        height: 2px;
        background-color: var(--secondary-color);
        margin: 0 auto 1rem;
    }

    .section-description {
        font-size: 1.1rem;
        color: var(--text-color);
        max-width: 600px;
        margin: 0 auto 2rem;
        line-height: 1.6;
    }

    .whatsapp-contact {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 3rem 2rem;
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .whatsapp-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #25D366;
        color: white;
        border-radius: 50%;
        padding: 18px;
    }

    .whatsapp-icon svg {
        width: 100%;
        height: 100%;
    }

    .whatsapp-contact h3 {
        font-size: 1.8rem;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
    }

    .whatsapp-description {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .whatsapp-number {
        margin-bottom: 2rem;
        font-size: 1.2rem;
    }

    .whatsapp-button {
        display: inline-flex;
        align-items: center;
        background-color: #25D366;
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 0 auto 2rem;
        font-family: 'Montserrat', sans-serif;
        font-size: 1rem;
        text-decoration: none;
        margin-right: 1rem;
    }

    .whatsapp-button:hover {
        background-color: #128C7E;
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .whatsapp-button-icon {
        display: inline-block;
        width: 24px;
        height: 24px;
        margin-right: 10px;
    }

    .whatsapp-button-icon svg {
        width: 100%;
        height: 100%;
    }

    .contact-info {
        text-align: left;
        margin-top: 1rem;
    }

    .contact-info p {
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .contact-info ul {
        padding-left: 1.5rem;
        margin-bottom: 1rem;
    }

    .contact-info li {
        margin-bottom: 0.5rem;
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .whatsapp-contact {
            padding: 2rem 1.5rem;
        }
    }
</style>
