<section class="rsvp-section">
    <div class="section-header">
        <h2>RSVP</h2>
        <div class="divider"></div>
        <p class="section-description">We look forward to celebrating with you! Please let us know if you can make it by May 14, 2025.</p>
    </div>
    
    <form class="rsvp-form" id="rsvpForm">
        <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" required>
        </div>
        
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        
        <div class="form-group">
            <label for="attending">Will you be attending?</label>
            <select id="attending" name="attending" required>
                <option value="">Please select</option>
                <option value="yes">Yes, I'll be there!</option>
                <option value="no">Sorry, I can't make it</option>
            </select>
        </div>
        
        <div class="form-group" id="guestsGroup">
            <label for="guests">Number of Guests (including yourself)</label>
            <select id="guests" name="guests">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        
        <div class="form-group" id="mealPreferenceGroup">
            <label for="mealPreference">Meal Preference</label>
            <select id="mealPreference" name="mealPreference">
                <option value="standard">Standard (Indonesian-Dutch Fusion)</option>
                <option value="vegetarian">Vegetarian</option>
                <option value="vegan">Vegan</option>
                <option value="gluten-free">Gluten-Free</option>
            </select>
        </div>
        
        <div class="form-group full-width">
            <label for="message">Message to the Couple (Optional)</label>
            <textarea id="message" name="message" rows="4"></textarea>
        </div>
        
        <button type="submit" class="submit-button">Submit RSVP</button>
    </form>
    
    <div id="confirmation" class="confirmation-message hidden">
        <h3>Thank you for your response!</h3>
        <p>We've received your RSVP and look forward to celebrating with you.</p>
    </div>
</section>

<style>
    .rsvp-section {
        padding: 5rem 1rem;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }
    
    .section-header {
        margin-bottom: 3rem;
    }
    
    .section-header h2 {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }
    
    .divider {
        width: 100px;
        height: 2px;
        background-color: var(--secondary-color);
        margin: 0 auto 1rem;
    }
    
    .section-description {
        font-size: 1.1rem;
        color: var(--text-color);
        max-width: 600px;
        margin: 0 auto 2rem;
        line-height: 1.6;
    }
    
    .rsvp-form {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        text-align: left;
    }
    
    .form-group {
        flex: 1 0 calc(50% - 0.75rem);
        display: flex;
        flex-direction: column;
    }
    
    .full-width {
        flex: 1 0 100%;
    }
    
    label {
        margin-bottom: 0.5rem;
        font-weight: 500;
    }
    
    input, select, textarea {
        padding: 0.8rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-family: 'Montserrat', sans-serif;
        font-size: 1rem;
    }
    
    textarea {
        resize: vertical;
    }
    
    .submit-button {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 1.5rem auto 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 1rem;
    }
    
    .submit-button:hover {
        background-color: var(--secondary-color);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    
    .confirmation-message {
        margin-top: 2rem;
        padding: 2rem;
        background-color: rgba(91, 140, 90, 0.1);
        border-radius: 10px;
        border-left: 5px solid var(--accent-color);
    }
    
    .confirmation-message h3 {
        color: var(--accent-color);
        margin-bottom: 0.5rem;
    }
    
    .hidden {
        display: none;
    }
    
    @media (max-width: 768px) {
        .form-group {
            flex: 1 0 100%;
        }
    }
</style>

<script>
    // Show/hide guest count and meal preference based on attendance
    const attendingSelect = document.getElementById('attending');
    const guestsGroup = document.getElementById('guestsGroup');
    const mealPreferenceGroup = document.getElementById('mealPreferenceGroup');
    const rsvpForm = document.getElementById('rsvpForm');
    const confirmation = document.getElementById('confirmation');
    
    if (attendingSelect && guestsGroup && mealPreferenceGroup) {
        attendingSelect.addEventListener('change', function() {
            if (this.value === 'yes') {
                guestsGroup.style.display = 'flex';
                mealPreferenceGroup.style.display = 'flex';
            } else {
                guestsGroup.style.display = 'none';
                mealPreferenceGroup.style.display = 'none';
            }
        });
    }
    
    // Form submission
    if (rsvpForm && confirmation) {
        rsvpForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // In a real application, you would send the form data to a server here
            // For this demo, we'll just show the confirmation message
            
            rsvpForm.style.display = 'none';
            confirmation.classList.remove('hidden');
            
            // Scroll to confirmation message
            confirmation.scrollIntoView({ behavior: 'smooth' });
        });
    }
</script>
